
<%= simple_form_for @category do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title, label: "Título", hint: "Tipo de atividade a ser cadastrada." %>

  <%= f.input :user_id, id: :category_user_id, input_html: { class: "form-control", type: :hidden, value: current_user.id }, label: false %>
  <%= f.input :color, as: :color, label: "Cor da categoria", hint: "Para visualização personalizada no calendário", input_html: { value: "#00e1ff" } %>

  <div class="row justify-content-center">
    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-secondary btn-lg" %>
    </div>
  </div>
<% end %>
