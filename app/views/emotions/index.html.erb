<p id="notice"><%= notice %></p>

<h1>Emoções</h1>

<table>
  <thead>
    <tr>
      <th>Escala</th>
      <th>Sentimentos</th>
      <th>Gatilho</th>
      <th>Pensamento</th>
      <th>Ação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emotions.each do |emotion| %>
      <tr>
        <td><%= emotion.scale %></td>
        <td><%= emotion.feelings %></td>
        <td><%= emotion.trigger %></td>
        <td><%= emotion.thought %></td>
        <td><%= emotion.action %></td>
        <td><%= link_to 'Show', emotion %></td>
        <td><%= link_to 'Edit', edit_emotion_path(emotion) %></td>
        <td><%= link_to 'Destroy', emotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

