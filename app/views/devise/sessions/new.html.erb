<h2>Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, 
                label: "Senha",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Lembrar", input_html: { class: "form-check-input" }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>

<br/>
<%= render "devise/shared/links" %>
